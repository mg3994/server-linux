# Multi-Vendor Delivery Server - India Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8443

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/delivery_server_india

# Firebase Configuration (India Project)
FIREBASE_PROJECT_ID=your-india-delivery-project
FIREBASE_SERVICE_ACCOUNT_KEY=./firebase-service-account-india.json

# India-specific Configuration
DEFAULT_CURRENCY=INR
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_LANGUAGE=en-IN
COUNTRY=India

# GST Configuration
GST_ENABLED=true
GST_NUMBER=your-gst-number
FSSAI_LICENSE=your-fssai-license

# Payment Configuration
UPI_ENABLED=true
UPI_MERCHANT_ID=your-merchant-id
PAYTM_ENABLED=true
PHONEPE_ENABLED=true
GOOGLEPAY_ENABLED=true

# Delivery Configuration
MINIMUM_ORDER_AMOUNT=99.0
DELIVERY_FEE=29.0
FREE_DELIVERY_ABOVE=299.0
PEAK_HOUR_SURCHARGE=15.0
WEEKEND_SURCHARGE=10.0

# Advanced Delivery Management
DELIVERY_ASSIGNMENT_TIMEOUT_SECONDS=300
DELIVERY_LOCATION_UPDATE_INTERVAL_SECONDS=30
MAX_DELIVERY_DISTANCE_KM=20.0
DEFAULT_DELIVERY_FEE=30.0
PEAK_HOUR_SURCHARGE_PERCENTAGE=25.0
WEEKEND_SURCHARGE_PERCENTAGE=15.0
FESTIVAL_SURCHARGE_PERCENTAGE=35.0

# Supported Cities (comma-separated)
DELIVERY_CITIES=Mumbai,Delhi,Bangalore,Chennai,Kolkata,Hyderabad,Pune,Ahmedabad

# TLS Configuration
TLS_CERT_PATH=cert.pem
TLS_KEY_PATH=key.pem

# Security Configuration
CORS_ORIGINS=*
JWT_SECRET=your-jwt-secret-key

# Feature Flags
WEBSOCKET_ENABLED=true
NOTIFICATIONS_ENABLED=true
METRICS_ENABLED=true
INDIA_FEATURES_ENABLED=true

# Compliance
DATA_LOCALIZATION_ENABLED=true
RBI_COMPLIANCE_ENABLED=true
CUSTOMER_DATA_RETENTION_DAYS=365
TRANSACTION_DATA_RETENTION_DAYS=2555

# Logging
RUST_LOG=info